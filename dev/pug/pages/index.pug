extends ../layout/_layout

block title
  title Homepage

block content
  h1 AccEss: Accessible Essentials
  h2 Accessible Select (single option)
  .access-select
    .access-select__option.access-select__chosen-option Choose an option
    ul.access-select__list
      each id, option in singleSelect
        li.access-select__item
          input(id=id type="radio", name="Select (single option)", value=option).access-select__option.access-select__input
          label(for=id).access-select__option.access-select__label= option